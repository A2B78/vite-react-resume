node {
    def app

    stage('Clone repository') {

        checkout scm
    }

    stage('Build image') {
  
       app = docker.build("jideoni/vite-react-resume")
    }

    stage('Test image') {

        app.inside {
            sh 'echo "Tests passed"'
        }
    }

    stage('Push image') {
        
        docker.withRegistry('https://jideoni.hub.docker.com', 'Jide2021@') {
            app.push("${env.BUILD_NUMBER}")
        }
    }
}
